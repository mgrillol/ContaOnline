@model IEnumerable<ContaOnline.Domain.Models.Contato>

@{
    ViewBag.Title = "Inicio";
}

<h2>Inicio</h2>

<p>
    <a href='@Url.Action("Incluir")'><span class="glyphicon glyphicon-plus-sign">Novo</span></a>
</p>
<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Email
        </th>
        <th>
            Telefone
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
        <td>@Html.DisplayFor(modelItem => item.Email)</td>
        <td>@Html.DisplayFor(modelItem => item.Telefone)</td>

        <td>
            <a href='@Url.Action("Alterar", new { id = item.Id })'><span class="glyphicon glyphicon-edit"></span></a>
            <a href='@Url.Action("Excluir", new { id = item.Id })'><span class="glyphicon glyphicon-remove"></span></a>
        </td>
    </tr>
}

</table>
