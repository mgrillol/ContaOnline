@model ContaOnline.UI.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<hr />

<form method="post">
    <div class="form-horizontal">

        <div class="container">
            <div class="text-danger" id="mensagem">@Model.Mensagem</div>
        </div>

        <div class="form-group">
            <label class="control-label" for="Email">Email:</label>
            <input class="form-control" type="text" name="Email" id="Email" />
        </div>

        <div class="form-group">
            <label class="control-label" for="Senha">Senha:</label>
            <input class="form-control" type="password" name="Senha" id="Senha" />
        </div>

        <div class="form-group">
            <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-floppy-save"></span> Enviar </button>
        </div>

    </div>

</form> 